{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "get-insiders",
            "type": "shell",
            "command": ["uv", "run", "broken", "insiders"]
        },
        {
            "label": "mkdocs-serve",
            "type": "shell",
            "command": ["uv", "run", "mkdocs", "serve"]
        },

        // Releases
        {
            "label": "release-depthflow",
            "type": "shell",
            "command": [
                "uv", "run", "broken", "depthflow", "release", "--tarball",
                "--target", "linux-amd64", "--target", "windows-amd64",
            ]
        },
        {
            "label": "release-pianola",
            "type": "shell",
            "command": [
                "uv", "run", "broken", "pianola", "release", "--tarball",
                "--target", "linux-amd64", "--target", "windows-amd64",
            ]
        },
        {
            "label": "release-shaderflow",
            "type": "shell",
            "command": [
                "uv", "run", "broken", "shaderflow", "release", "--tarball",
                "--target", "linux-amd64", "--target", "windows-amd64",
            ]
        },
        {
            "label": "release-spectronote",
            "type": "shell",
            "command": [
                "uv", "run", "broken", "spectronote", "release", "--tarball",
                "--target", "linux-amd64", "--target", "windows-amd64",
            ]
        }
    ]
}